{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Desktop AI Search",
  "version": "0.1.0",
  "identifier": "com.yourcompany.desktop-ai-search",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "./frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Desktop AI Search",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["**"]
    }
  }
}