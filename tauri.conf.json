{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Desktop AI Search",
  "version": "0.1.0",
  "identifier": "com.desktop.aisearch",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm --prefix ./frontend run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "./frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Desktop AI Search",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}